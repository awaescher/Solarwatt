<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:local="clr-namespace:Sundays.Client.App"
                xmlns:microcharts="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms" 
                x:Class="Sundays.Client.App.MainPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Fill" HorizontalOptions="Fill">
            <microcharts:ChartView x:Name="generationChartView" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" />
            <microcharts:ChartView x:Name="consumptionChartView" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>